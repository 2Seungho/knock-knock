<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.daou.knock.common.db.mybatis.mapper.ArticleMapper">


    <select id="findAllByDto" parameterType="article" resultType="article">
        SELECT * FROM article
        ORDER BY idx DESC
        LIMIT #{firstIndex},5
    </select>

    <select id="countByDto" parameterType="article" resultType="int">
        SELECT count(*) FROM article
    </select>

    <select id="findByIdx" parameterType="Long" resultType="article">
        SELECT * FROM article
        WHERE idx = #{idx}
    </select>

    <update id="updateByArticle" parameterType="article">
        UPDATE article
        SET title = #{title},
            contents = #{contents}
        WHERE idx = #{idx}
    </update>

    <insert id="insertByArticle" parameterType="article">
        INSERT
        INTO article (
        user_idx
        , title
        , contents
        )
        VALUES (
        #{userIdx}
        , #{title}
        , #{contents}
        )
        <selectKey keyProperty="idx" resultType="Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <update id="updateDelYn" parameterType="Long">
        UPDATE article
        SET del_yn = 'Y'
        WHERE idx = #{idx}
    </update>

</mapper>
